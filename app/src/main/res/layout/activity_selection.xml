<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#79f5f239"
    tools:context="com.example.harsh.homedashboard.Selection">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECT FIELD"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textColor="#060606"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/CEcard1"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@color/colorAccent"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="COMPUTER ENGINEERING"
                        android:layout_margin="15dp"
                        android:textSize="20dp"
            />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/IFcard1"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@color/colorAccent"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="INFORMATION TECHNOLOGY"
                        android:layout_margin="15dp"
                        android:textSize="20dp"
            />
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="20dp"
                    android:background="@color/colorAccent"
                    app:cardCornerRadius="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MECHANICAL ENGINEERING"
                        android:layout_margin="15dp"
                        android:textSize="20dp"
            />
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
                app:cardCornerRadius="5dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CIVIL ENGINEERING"
                    android:layout_margin="15dp"
                    android:textSize="20dp"
            />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
                app:cardCornerRadius="5dp">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ELECTRONICS ENGINEERING"
                    android:layout_margin="15dp"
                    android:textSize="20dp"
            />
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@color/colorAccent"
                app:cardCornerRadius="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EXTC ENGINEERING"
                    android:layout_margin="15dp"
                    android:textSize="20dp"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@color/colorAccent"
                app:cardCornerRadius="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="INSTRUMENTATION ENRG"
                    android:layout_margin="15dp"
                    android:textSize="20dp"
                    />
            </android.support.v7.widget.CardView>


        </LinearLayout>

</ScrollView>


</android.support.v7.widget.LinearLayoutCompat>
